# PXE Boot Server Configuration (ProxyDHCP mode)
# Managed by Ansible - do not edit manually

# Listen on {{ pxe_interface }} only (wired network for PXE clients)
interface={{ pxe_interface }}
bind-interfaces

# ProxyDHCP mode - don't assign IPs, just provide boot info
dhcp-range={{ pxe_network }},proxy

# PXE boot options (using lpxelinux for HTTP support)
pxe-service=x86PC,"PXE Boot Menu",lpxelinux
dhcp-boot=lpxelinux.0,{{ pxe_server_ip }},{{ pxe_server_ip }}

# Enable TFTP server
enable-tftp
tftp-root={{ tftp_root }}

# Logging
log-dhcp
log-queries
