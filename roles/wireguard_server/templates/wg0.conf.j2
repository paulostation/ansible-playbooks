# {{ ansible_managed }}
# WireGuard Server Configuration

[Interface]
Address = {{ wireguard_server_ip }}/24
ListenPort = {{ wireguard_port }}
PrivateKey = {{ wg_privatekey_content.content | b64decode | trim }}

# PostUp/PostDown for NAT (traffic forwarding to internet)
PostUp = iptables -t nat -A POSTROUTING -s {{ wireguard_network }} -o %i -j MASQUERADE; iptables -A FORWARD -i %i -j ACCEPT; iptables -A FORWARD -o %i -j ACCEPT
PostDown = iptables -t nat -D POSTROUTING -s {{ wireguard_network }} -o %i -j MASQUERADE; iptables -D FORWARD -i %i -j ACCEPT; iptables -D FORWARD -o %i -j ACCEPT

{% for peer in wireguard_peers %}
# Peer: {{ peer.name }}
[Peer]
PublicKey = {{ peer.public_key }}
AllowedIPs = {{ peer.allowed_ips }}
{% if peer.endpoint is defined %}
Endpoint = {{ peer.endpoint }}
{% endif %}
{% if wireguard_keepalive > 0 and peer.keepalive | default(true) %}
PersistentKeepalive = {{ wireguard_keepalive }}
{% endif %}

{% endfor %}
